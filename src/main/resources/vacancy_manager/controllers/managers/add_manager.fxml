<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="vacancy_manager.controllers.vacancies.AddVacancyController"
          vgap="15" hgap="15" padding="20">
    <Label text="Название вакансии:" GridPane.rowIndex="0" GridPane.columnIndex="0" textFill="BLACK"/>
    <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"
               promptText="Введите название вакансии"/>

    <Label text="Описание вакансии:" GridPane.rowIndex="1" GridPane.columnIndex="0" textFill="BLACK"/>
    <TextArea fx:id="descriptionArea" GridPane.rowIndex="1" GridPane.columnIndex="1"
              promptText="Введите описание вакансии" prefRowCount="4" wrapText="true"/>

    <Label text="Зарплата:" GridPane.rowIndex="2" GridPane.columnIndex="0" textFill="BLACK"/>
    <TextField fx:id="salaryField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Введите зарплату"/>

    <Label text="Менеджер:" GridPane.rowIndex="3" GridPane.columnIndex="0" textFill="BLACK"/>
    <TextField fx:id="managerField" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Выберите менеджера"/>

    <Button text="Выбрать менеджера" fx:id="selectManagerButton" GridPane.rowIndex="4" GridPane.columnIndex="1"
            onAction="#handleSelectManagerButton"/>

    <Button text="Добавить вакансию" fx:id="addButton" GridPane.rowIndex="5" GridPane.columnIndex="1"
            onAction="#handleAddVacancy"/>

    <Button text="Отмена" fx:id="cancelButton" GridPane.rowIndex="5" GridPane.columnIndex="0"
            onAction="#handleCancel"/>
</GridPane>
