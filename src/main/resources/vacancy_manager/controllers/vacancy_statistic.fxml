<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vacancy_manager.controllers.VacancyStatisticsController">
    <center>
        <VBox spacing="20">
            <HBox spacing="20">
                <VBox spacing="10">
                    <BarChart fx:id="salaryBarChart" prefWidth="700" prefHeight="400">
                        <xAxis>
                            <CategoryAxis label="Вакансии" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Зарплата (руб)" />
                        </yAxis>
                    </BarChart>
                </VBox>

                <VBox spacing="10">
                    <PieChart  fx:id="managerPieChart" prefWidth="700" prefHeight="400"/>
                </VBox>
            </HBox>
            <Button text="В главное меню" onAction="#openMainMenu" />
        </VBox>
    </center>
</BorderPane>